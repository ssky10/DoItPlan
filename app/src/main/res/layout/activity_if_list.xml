<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".IfListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70px"
                android:layout_marginTop="140px"
                android:gravity="center"
                android:text="조 건"
                android:textColor="@color/accent_color"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@color/blue"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_call_white_48px"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue"
                        android:gravity="center"
                        android:text="전화"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@android:color/holo_orange_dark"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_chat_white_48px"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_orange_dark"
                        android:gravity="center"
                        android:text="문자"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70px"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50px"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="300px"
                        android:layout_height="300px"
                        android:layout_marginRight="50px"
                        android:layout_weight="1"
                        android:background="@drawable/kakaotalk" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#fff22f"
                        android:gravity="center"
                        android:lines="1"
                        android:text="카카오톡"
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@color/colorAccent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_alarm_on_white_48px"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="시간"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70px"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@color/purple"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_wb_sunny_white_48dp"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="날씨"
                        android:textColor="@color/cardview_light_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@android:color/holo_green_light"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_battery_std_white_48px"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_green_light"
                        android:gravity="center"
                        android:text="배터리"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70px"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@android:color/holo_red_light"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_description_white_48px"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_red_light"
                        android:gravity="center"
                        android:text="클립보드"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:background="@android:color/holo_orange_light"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pin_drop_white_48px"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_orange_light"
                        android:gravity="center"
                        android:text="위치"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>